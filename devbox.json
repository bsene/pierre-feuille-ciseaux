{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.11.0/.schema/devbox.schema.json",
  "packages": [
    "deno@latest"
  ],
  "shell": {
    "init_hook": [
      "export GAMBLE_TEST_COMMAND='deno test'",
      "alias green='git-gamble --green'",
      "alias red='git-gamble --red'",
      "alias refactor='git-gamble --refactor'",
    ],
    "scripts": {
      "test": [
        "echo \"Error: no test specified\" && exit 1"
      ]
    }
  }
}
